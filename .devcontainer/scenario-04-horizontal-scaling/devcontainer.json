{
  "name": "Scenario 4 â€” Horizontal Scaling",
  "dockerComposeFile": "../../scenario-04-horizontal-scaling/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "postStartCommand": "cd /app && npm install && node scripts/wait-and-seed.js",
  "postAttachCommand": "code SCENARIO.md",
  "forwardPorts": [3000, 8080, 3002, 9090],
  "portsAttributes": {
    "3000": {
      "label": "Catalog API (single server)",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Nginx Load Balancer (after fix)",
      "onAutoForward": "silent"
    },
    "3002": {
      "label": "Grafana Dashboard",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.fontSize": 14,
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
